{
  "manifest_version": 3,
  "name": "My Dictionary Lookup",
  "version": "1.0",
  "description": "Highlight to look up dictionary definitions.",
  "permissions": ["nativeMessaging"],
  "host_permissions": ["http://localhost:8080/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content/shim.js",
        "content/state.js",
        "content/popup.js",
        "content/lookup.js",
        "content/render.js",
        "content/toggle.js",
        "content/listeners.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["DefaultStyle.css", "CustomStyle.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
